<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yhase.yhase.MainActivity"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:weightSum="2"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:id="@+id/each_book_item_card_vie">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/tshirt"
                android:id="@+id/card_view_book_imag"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_below="@+id/card_view_book_imag"
                android:text="600 Rs"
                android:id="@+id/card_view_book_nam"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/each_book_item_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/tshirtb"
                android:id="@+id/card_view_book_image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_below="@+id/card_view_book_image"
                android:text="500 Rs"
                android:id="@+id/card_view_book_name"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
